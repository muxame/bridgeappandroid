<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_update"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:weightSum="1">


        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:src="@drawable/ic_back_update" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/forget_password_update"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            app:fontPath="fonts/Ubuntu-Light.ttf" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/logo_update" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_xlarge"
                    android:visibility="gone"
                    app:fontPath="fonts/Ubuntu-Light.ttf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:text="@string/lets_help_you"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    app:fontPath="fonts/Ubuntu-Light.ttf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="start"
                    android:text="@string/forget_password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_large"
                    android:visibility="gone"
                    app:fontPath="fonts/Ubuntu-Regular.ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/colorPrimary"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/bottom_line_primary"
                    android:backgroundTint="@color/black"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/iv_email"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|start"
                        android:src="@drawable/ic_email_update" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText

                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/iv_email"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:fontFamily="@font/century_normal"
                            android:gravity="start|center_vertical"
                            android:hint="@string/email"


                            android:inputType="textMultiLine"
                            android:maxLines="2"
                            android:padding="@dimen/_5sdp"

                            android:textSize="@dimen/_12sdp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmit"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/red_button"
            android:fontFamily="@font/century_normal"
            android:text="@string/submit"
            android:foreground="?attr/selectableItemBackground"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>


</RelativeLayout>
