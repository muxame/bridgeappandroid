<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_white_rectangle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:fontPath="fonts/Ubuntu-Light.ttf"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/text_medium"
            android:text="Select Online Degrees "/>

        <TextView
            android:id="@+id/textOnlineBachelor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingEnd="20dp"
            app:fontPath="fonts/Ubuntu-Light.ttf"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/text_xsmall"
            android:text="Online Bachelor"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray1"/>
        <TextView
            android:id="@+id/textOnlineMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:fontPath="fonts/Ubuntu-Light.ttf"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/text_xsmall"
            android:foreground="?attr/selectableItemBackground"
            android:text="Online Master"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray1"/>
        <TextView
            android:id="@+id/textOnlinephd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:fontPath="fonts/Ubuntu-Light.ttf"
            android:textColor="@color/black"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="@dimen/text_xsmall"
            android:text="Online Ph.D"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray1"/>

        <TextView
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            app:fontPath="fonts/Ubuntu-Light.ttf"
            android:textStyle="bold"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_medium"
            android:text="@string/tedpermission_close"/>

    </LinearLayout>

</LinearLayout>