<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back_update"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:weightSum="1">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/centurey_bold"
                    android:gravity="center"
                    android:text="@string/about_us"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_medium"
                    app:fontPath="fonts/Ubuntu-Light.ttf" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />
            </LinearLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingEnd="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo_update" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Version 1.0"

                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"
                        app:fontPath="fonts/Antic-Regular.ttf" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/century_normal"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/about_text"
                                android:textAlignment="textStart"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/about_text_2"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/about_text_3"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/about_text_4"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="5dp"
                                android:text="@string/about_text_5"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:visibility="gone" />
                        </LinearLayout>

                    </ScrollView>

                    <Button
                        android:id="@+id/contactBtn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/outline_rectangle"
                        android:text="@string/contact_us"
                        android:textAllCaps="false"
                        android:textColor="@color/admission_color_selector"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/join_us"
                            android:textColor="#000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <ImageButton
                            android:id="@+id/fbBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:padding="@dimen/_5sdp"

                            android:src="@drawable/icon_fb" />

                        <ImageButton
                            android:id="@+id/twitterBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:padding="@dimen/margin_small"
                            android:src="@drawable/ic_twtr"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/instagramBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:src="@drawable/icon_insta" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/fotter_pattern" />
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
